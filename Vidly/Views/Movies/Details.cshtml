@model Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.GenreMovie.Name</li>
    <li>Release Date: @Model.RelaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.CreatedAt.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

